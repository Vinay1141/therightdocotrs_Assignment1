<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>People List</title>
</head>
<body>
  <h1>List of People</h1>
  <a href="/person/new">Add New Person</a>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Mobile</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% people.forEach(person => { %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.age %></td>
          <td><%= person.gender %></td>
          <td><%= person.mobile %></td>
          <td>
            <a href="/person/<%= person._id %>/edit">Edit</a> |
            <a href="/person/<%= person._id %>/delete">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
